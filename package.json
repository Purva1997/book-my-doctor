{
    "name": "book-my-doctor",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "admin",
        "frontend",
        "backend"
    ],
    "scripts": {
        "admin": "cd admin && npm start",
        "frontend": "cd frontend && npm start",
        "backend": "cd backend && npm start",
        "dev": "concurrently \"npm run admin\" \"npm run frontend\" \"npm run backend\"",
        "install:all": "npm install && npm run install:admin && npm run install:frontend && npm run install:backend",
        "install:admin": "cd admin && npm install",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && npm install",
        "build:all": "npm run build:admin && npm run build:frontend && npm run build:backend",
        "build:admin": "cd admin && npm run build",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}